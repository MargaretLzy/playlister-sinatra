<h1>Update Song</h1>

<h2>Edits for <%= @song.name %></h2>

  <form action="/songs/<%= @song.slug %>" method="POST">
    <input type="hidden" name="_method" value="patch">
    <label for ="song_name">Edit the Song Name</label>
    <input type="text" name="song[name]" id="song_name" value="<%= @song.name %>">
    
   <label for="artist_name">Edit the Artist Name</label>
  <input type="text" name="artist[name]" value="<%= @song.artist.name %>" id="artist_name">
    <br>
    


 <% Genre.all.each do |genre| %>
    <label><%= genre.name %></label>
    <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>" <%='checked' if @song.genres.include?(genre) %>>
  <% end %>


    <input type="submit" value="Save">
  
  </form>